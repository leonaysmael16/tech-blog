<div class="card">
    <h3 class="card-header">Log In</h3>
    <form id="login-form" class="card-body">
        <label class="form-label" for="username-login">Username</label>
        <input id="username-login" type="text" class="form-input" />
        <label class="form-label" for="password-login" class="form-input">Password</label>
        <input id="password-login" type="password" class="form-input" />

        <button type="submit" class="btn">Log In</button>
        <a class="login-link" href="/signup">Sign Up</a>
    </form>
</div>

<script src="/javascript/login.js"></script>